<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="https://i.postimg.cc/j5wK5dpr/unnamed.png%22%3E" type="image/x-icon">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"> -->
    <link rel="stylesheet" href="../public/style.css">
    <link rel="stylesheet" href="../public/login.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(function() {
            let height = $(window).height();
            let allHeights = $('footer').height() + $('.container-nav').height();
            $('main').height(height - allHeights);
        })
    </script>
    <title>Inemaps</title>
</head>

<body>
    <header class="container-nav">
        <a href="/"><button id="nav-btn">Home</button></a>
        <nav>
            <ul class="container-links">
                <li><a href="/bloques">Blocks</a></li>
                
                <% if(req.isAuthenticated()) { %>
                    <li><a href="/posts">Publications</a></li>
                <% } %>

                <% if(!req.isAuthenticated()) { %>
                    <li><a href="/users/login">Log in</a> </li>
                <% } %>
                
                <% if(req.isAuthenticated()) { %>
                    <li>
                        <a href="">Profile</a>
                        <ul class="menu-vertical">
                            <li><br>Welcome!</li>
                            <li><a href="/users/dashboard">View my profile</a></li>
                            <li><a href="/users/logout">Log out</a></li>
                        </ul>
                    </li>
                <% } %>
            </ul>
        </nav>
        <a class="container-logo" href="/"><img id="nav-logo"
                src="https://i.postimg.cc/MHRb3QWv/inemaps-nav-logo2.png" alt="Inemaps Logo"></a>
    </header>
    
    <main>
        <div class="main-background minimum-sizes all">
            <div class="login-container">
                <div class="login-text">
                    <h1>Register</h1>
            
                    <ul>
                        <% if(typeof errors !='undefined' ) { %>
                            <% errors.forEach(error=> { %>
                                <li>
                                    <%= error.message %>
                                </li>
                                <% }) %>
                                    <% } %>
                    </ul>
                </div>
    
                <div class="login-input">
                    <form action="/users/register" method="POST">
                        <div>
                            <input class="simple-text dark input-text" type="number" name="id" id="id" placeholder="Student code" required>
                        </div>
                        <div>
                            <input class="simple-text dark input-text" type="text" name="name" id="name" placeholder="Name" size="35" autofocus required>
                        </div>
                        <div>
                            <input class="simple-text dark input-text" type="email" name="email" id="email" placeholder="Email" size="35" required>
                        </div>
                        <div>
                            <input class="simple-text dark input-text" type="password" name="password" id="password" placeholder="Password" size="35" required>
                        </div>
                        <div>
                            <input class="simple-text dark input-text" type="password" name="password2" id="password2" placeholder="Confirm Password" size="35" required>
                        </div>
                        <div>
                            <button type="submit" id="login-btn">Register</button>
                        </div>
                        <p>Already registered? <a href="/users/login"><span>Login here</span></a></p>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <h4>Todos los derechos reservados.</h4>
        <p>Copyright &copy; 2022</p>
    </footer>
</body>

</html>