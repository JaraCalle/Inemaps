    <style>
        @import url('https://fonts.googleapis.com/css?family=Montserrat:500');

        :root {
            --p-black: #1B1D24;
        }

        * {
            margin: 0;
            padding: 0;
            text-decoration: none;
            list-style: none;
            font-family: "Montserrat", sans-serif;
        }

        li,
        a,
        button {
            font-weight: 500;
            font-size: 16px;
            color: #edf0f1;
            text-decoration: none;
        }

        .container-nav {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0px 20px;
            background-color: var(--p-black);
        }

        .container-logo {
            cursor: pointer;
            margin-right: auto;
        }

        .container-links {
            list-style: none;
        }

        .container-links li {
            display: inline-block;
            padding: 0px 20px;
        }

        .container-links li a {
            transition: all 0.3s ease 0s;
        }

        .container-links li a:hover {
            transition: all 0.3s ease 0s;
            color: rgb(48, 131, 48, 0.8);
        }

        button {
            margin-left: 20px;
            padding: 9px 25px;
            background-color: #085a08;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease 0s;
        }

        button:hover {
            box-shadow: 7px 7px 0px rgb(48, 131, 48, 0.8);
            top: -5px;
            left: -5px;
        }

        /*Contenido Principal*/
        .containermio {
            display: flex;
            background: url(https://i.postimg.cc/XvyCK2rn/Background-web.jpg);
            background-size: cover;
            box-shadow: inset 0 0 40px #0D0D0D;
            height: 400px;
            align-items: center;
            justify-content: center;

        }
        .description {
            width: 70%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .description-text {
            font-family: sans-serif;
            color: white;
            text-align: center;
            max-width: 70%;
        }

        .description-text h1 {
            font-size: 50px;
            margin-bottom: 1.5rem;
        }
        
        .description-logo {
            margin: 10%;
        }
        #home-logo {
            width: 150%;
        }
    </style>
